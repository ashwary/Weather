<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Main Activity Theme. -->
    <style name="ForecastTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Weather.NoTitle</item>
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.Weather.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>

    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
    </style>


    <style name="AppTheme.Main" parent="@style/AppTheme"/>

    <style name="AppTheme.Details" parent="@style/AppTheme"/>




    <style name="ForecastStyle">
        <!-- Here it's a stub.  In screens of sufficient width, this style includes modifications
        for two-pane layout -->
    </style>



</resources>
